{
    "manifest_version":2,
    "name":"Productivity management extension",
    "version":"1.0.0",
    "description":"Boost your productivity using this extension",
    "icons":{
        "128":"money128.png",
        "48":"money48.png",
        "16":"money16.png"
    },
    "browser_action":{
        "default_icon":"money16.png",
        "default_popup":"popup.html"
    },
    "background":{
        "scripts":["background.js"]
    },
    "permissions":[
        "storage",
        "notifications",
        "contextMenus"
    ]
}